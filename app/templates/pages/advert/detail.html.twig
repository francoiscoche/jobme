{% extends 'base.html.twig' %}

{% block title %}Hello AdvertController!{% endblock %}

{% block body %}
<div class="container my-8">

            <a type="button" href="{{ path("app_list") }}" class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"><i class="fas fa-angle-left"></i> Torni agli annunci</a>

    <h1 class="text-4xl text-center mt-24 mb-8">{{ advert.title }}</h1>
   
   <h3 class="mt-4">Descrizione annuncio.</h1>
       <span class="badge badge-success">Annuncio creato il : {{ advert.createdAt | date("d/m/Y H:m:s") }}</span>

    <p class="mt-4">{{ advert.description }}</p>


<h3 class="my-8"></h1>

<div class="flex mt-8">
  <div class="flex flex-col md:flex-row md:max-w-xl rounded-lg bg-white shadow-lg">
    <img class=" w-full h-96 md:h-auto object-cover md:w-48 rounded-t-lg md:rounded-none md:rounded-l-lg" src="https://mdbootstrap.com/wp-content/uploads/2020/06/vertical.jpg" alt="" />
    <div class="p-6 flex flex-col justify-start">
      <h3 class="text-gray-900 text-2xl font-medium mb-2">A proposito del richiedente.</h5>
      <p class="text-gray-700 text-base">{{ advert.user.firstname }}</p>
      <p class="text-gray-700 text-base">{{ advert.user.city }}</p>
      <p class="text-gray-700 text-base">{{ advert.user.phone }}</p>
      <p class="text-gray-700 text-base">{{ advert.user.presentation }}</p>
       <a type="button" href="{{ path("app_contact") }}" class="text-center my-4 inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"><i class="fas fa-envelope"></i> Contattami</a>

    </div>
  </div>
</div>
</div>
{% endblock %}
