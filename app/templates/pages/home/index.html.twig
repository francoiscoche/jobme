{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <!-- Background image -->
    <div class="relative overflow-hidden bg-no-repeat bg-cover" style="
        background-position: 50%;
        min-height: 561px;
        background-image: url('https://d1b747rczec55w.cloudfront.net/assets/home-bg-4dc4b66b752c785811e5c6b1d3df1f90b953d05e0ff367ff34f8823f34a0036a.svg');
        height: 350px;">
        <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed"
        style="background-color: rgba(0, 0, 0, 0.20)">
            <div class="flex justify-center items-center h-full">
                <div class="text-center text-black px-6 md:px-12">
                    <h1 class="text-5xl font-bold mt-0 mb-6">Job Me!</h1>
                    <h3 class="text-3xl font-bold mb-8">Trova il fornitore di servizi ideale per tutti i servizi quotidiani</h3>
                    <a
                    href="{{ path("app_jobber") }}"
                    type="button"
                        class="inline-block px-6 py-2.5 border-2 border-black text-black font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
                        data-mdb-ripple="true" data-mdb-ripple-color="dark">
                        Scopri i nostri fornitori di servizi
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="flex flex-wrap justify-center my-4">
        {% for category in categories %}
            <div class="card-home mx-4 rounded-lg bg-white max-w-xs">
                <a href="{{ path('app_category', { slug : category.slug }) }}">
                <div class="card-img rounded-lg">
                
                        <img class="" src="{{ asset(category.image) }}" alt=""/>
                    
                </div>
                <div class="">
                    <h5 class="text-gray-900 text-xl font-medium">{{ category.name }}</h5>
                </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <!-- Background image -->
{% endblock %}
