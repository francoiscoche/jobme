{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<div class="container my-4">
<h1 class="text-4xl text-center mt-24 mb-8">Categoria : {{ categoria }}</h1>
{% if allCategories %}
  {% include "components/_dropdown.html.twig" with allCategories %}
{% endif %}
{% for advert in list %}
    <div class="flex justify-center my-4">
    <div class="block p-6 rounded-lg shadow-lg bg-white max-w-2xl">
      <span
    class="px-4 py-2 rounded-full text-gray-500 bg-gray-200 font-semibold text-sm flex align-center w-max cursor-pointer active:bg-gray-300 transition duration-300 ease">
    {{ advert.category }}
  </span>
  <div class="mt-4">
  <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">{{ advert.title }}</h5>
        <p class="text-gray-700 text-base mb-4">
        {{ advert.description }}
        </p>
            <a type="button" href="{{ path("app_advert_detail", { id : advert.id}) }}" class="inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"><i class="fab fa-readme"></i> Leggi di pi√π</a>
  </div>
        
    </div>
    </div>
  </div>
{% endfor %}
{% endblock %}
